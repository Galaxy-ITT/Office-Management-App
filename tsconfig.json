{
  "compilerOptions": {
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "paths": {
      "@/*": [
        "./*"
      ]
    },
    "target": "ES2017"
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts",
    "app/database/tables/tables.js",
    "app/database/index.js",
    "components/dashboardLatest.jsx",
    "components/app-administrative-page.jsx",
    "components/dashboard-layout.jsx",
    "components/home_page.jsx",
    "app/database/connection.js",
    "app/database/tables/initTable.js",
    "app/database/tables/initTable.js"
  ],
  "exclude": [
    "node_modules"
  ]
}
